<% if user_signed_in? %>
  

    <h1>Friends</h1>

    <table class='table table-striped table-bordered'>
    <thead class="thead-light">
        <tr>
        <th>Full name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Twitter</th>
        <th>User email</th>
        <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @friends.each do |friend| %>
        <tr>
        <% if friend.user == current_user %>
            <td><%= link_to friend.first_name + ' ' + friend.last_name, friend %></td>
            <td><%= friend.email %></td>
            <td><%= friend.phone %></td>
            <td><%= friend.twitter %></td>
            <td><%= friend.user.email %></td>
            <td><%= link_to 'Edit', edit_friend_path(friend), class:'btn btn-warning btn-sm' %></td>
            <td><%= link_to 'Destroy', friend, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger btn-sm' %></td>

        <% end %>

        </tr>
        <% end %>
    </tbody>
    </table>

    <br>

    <%= link_to 'New Friend', new_friend_path, class:"btn btn-secondary" %>

<% else %>

<h1>Hello World</h1>

<h1>This is my first web page </h1>


<% end %>
